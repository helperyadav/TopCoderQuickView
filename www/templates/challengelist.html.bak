<ion-view view-title="Active challenges">
  <ion-content>
    <ion-list>
      <ion-item ng-class="isLoading ? 'show' : 'hide'">
        <p>Refreshing... <ion-spinner></ion-spinner></p>
      </ion-item>
      <ion-item ng-repeat="challenge in chellenges | challengeType:settings" href="#/app/challengelist/{{challenge.challengeId}}">
        <p>{{challenge.challengeName}}</p>
        <h3 ng-hide="challenge.technologies.length==0" >Tech: {{challenge.technologies.toString()}}</h3>
        <ion-badge ng-hide="challenge.prize.length==0">Prize: {{'$' + challenge.prize.join(', $')}}</ion-badge>
        <h3>{{challenge.challengeType}}
      </ion-item>
    </ion-list>
  </ion-content>
</ion-view>